
OPTS1="-O0 -ggdb -Wall -Wno-switch -Wno-int-in-bool-context -Wunused-variable -Wtautological-compare "

OPTS2="-std=c++11 -rdynamic"

#  Without panel/ft REXX support
#LNK1="-lpanel -ltinfo -lncurses -lboost_thread -lboost_filesystem -lboost_system -lboost_chrono -ldl -lpthread"

#  With panel/ft REXX support
LNK1="-lpanel -ltinfo -lncurses -lboost_thread -lboost_filesystem -lboost_system -lboost_chrono -ldl -lpthread -lrexx -lrexxapi"

g++ $OPTS1 $OPTS2 -o lspf $LNK1 lspf.cpp
