/* Re-direct say ouput and error messages to a temporary file or it'll mess up lspf output */
"rm /tmp/runemac.say 2> /dev/null"
"rm /tmp/runemac.err 2> /dev/null"
.output~destination(.stream~new("/tmp/runemac.say"))
.error~destination(.stream~new("/tmp/runemac.err"))
/**********************************************************************************************/

/* Run edit macro emac against all files in directory dir */

address ISPEXEC
dir = "/home/daniel/.lspf/plib/"
Call sysfiletree dir, "file", "FO"

do i = 1 to file.0
   f = word( file.i, 1)
   "RDISPLAY Editing file &f"
   "EDIT FILE(&f) MACRO(emac)"
end

EXIT
