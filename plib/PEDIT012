)PANEL VERSION=1 FORMAT=1 KEYLIST(ISRSAB,ISR)

)COMMENT
Panel for editor PEDIT01
)ENDCOMMENT

)ABC DESC(File)
PDC DESC(Save)
ACTION RUN(>SAVE)
PDC DESC(Cancel)
ACTION RUN(>CANCEL)
PDC DESC(Exit)
ACTION RUN(END)

)ABC DESC(Edit)
PDC DESC(Reset)
ACTION RUN(>RESET)
PDC DESC(Undo)
ACTION RUN(>UNDO)
PDC DESC(Redo)
ACTION RUN(>REDO)
PDC DESC(Cut)
ACTION RUN(>CUT)
PDC DESC(Paste)
ACTION RUN(>PASTE)

)ABC DESC(Edit_Settings)
PDC DESC('Edit Settings')
ACTION RUN(>EDITSET)

)INCLUDE STD_PDC
)INCLUDE HLP_PDC


)BODY SCROLL(ZSCROLL)
PanelDescr "Edit &ZEDALT"
scrollOn

literal   3   2             FP  "EDIT"
field     3   10    MAX-20  VOI  NONE ZEDALT

literal   4   2             FP "Command ===>"
field     4   15    MAX-17  NEF PAD(USER) ZCMD

literal   4   MAX-15        FP  "Scroll ===>"
field     4   MAX-3   4     NEF  NONE  ZSCROLL

literal   3   MAX-18        FP  "Columns"
field     3   MAX-10  5     VOI  NONE ZCOL1
field     3   MAX-4   5     VOI  NONE ZCOL2

dynArea   5 1 MAX MAX ZAREA ZSHADOW DATAIN(01) DATAOUT(02) USERMOD(03) DATAMOD(04)

)INIT
.EDIT = YES

IF (&ZSCROLL = &Z) &ZSCROLL = 'HALF'

)PROC

IF (.MSG = &Z) VPUT ZSCROLL PROFILE

)END
