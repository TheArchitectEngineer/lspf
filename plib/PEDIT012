)PANEL VERSION=1 FORMAT=1 KEYLIST(ISRSAB,ISR)

)COMMENT
Panel for editor PEDIT01
)ENDCOMMENT

)BODY SCROLL(ZSCROLL)
PanelDescr "Edit &ZEDALT"
scrollOn

literal   3   2             FP  "EDIT"
field     3   10    70      VOI  NONE ZEDALT

literal   4   2             FP "Command ===>"
field     4   15    MAX-17  NEF PAD(USER) ZCMD

literal   4   MAX-15        FP  "Scroll ===>"
field     4   MAX-3   4     NEF  NONE  ZSCROLL

literal   3   MAX-18        FP  "Columns"
field     3   MAX-10  5     VOI  NONE ZCOL1
field     3   MAX-4   5     VOI  NONE ZCOL2

dynArea   5 1 MAX MAX ZAREA ZSHADOW DATAIN(01) DATAOUT(02) USERMOD(03) DATAMOD(04)

pdc File          "Save"             ACTION RUN(SAVE)
pdc File          "Cancel"           ACTION RUN(CANCEL)
pdc File          "Exit"             ACTION RUN(END)

pdc Edit          "Reset"            ACTION RUN(RESET)
pdc Edit          "Undo"             ACTION RUN(UNDO)
pdc Edit          "Redo"             ACTION RUN(REDO)
pdc Edit          "Cut"              ACTION RUN(CUT)
pdc Edit          "Paste"            ACTION RUN(PASTE)

pdc Edit_Settings "Edit Settings"    ACTION RUN(EDITSET)

)INCLUDE STD_PDC
)INCLUDE HLP_PDC


)INIT
.EDIT = YES

IF (&ZSCROLL = &Z) &ZSCROLL = 'HALF'

)PROC

IF (.MSG = &Z) VPUT ZSCROLL PROFILE

)END
