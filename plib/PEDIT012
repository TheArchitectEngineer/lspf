)PANEL VERSION=1 FORMAT=1 KEYLIST(ISRSAB,ISR)

)COMMENT
Panel for editor PEDIT01
)ENDCOMMENT

)ATTR

# COLOUR() and HILITE() only are recognised for TYPE(CHAR)
# HILITE - BLINK/REVERSE/USCORE
# INTENS - HIGH/LOW/NON
# COLOUR - WHITE/RED/BLUE/GREEN/PINK(MAGENTA)/YELLOW/TURQ

01 TYPE(DATAIN)  INTENS(LOW)  COLOUR(&ZEDOCLR)
02 TYPE(DATAIN)  INTENS(HIGH) COLOUR(&ZEDOCLR)

03 TYPE(DATAOUT) INTENS(LOW)
04 TYPE(DATAOUT) INTENS(HIGH)

05 TYPE(CHAR) COLOUR(RED)
06 TYPE(CHAR) COLOUR(GREEN)
07 TYPE(CHAR) COLOUR(YELLOW)
08 TYPE(CHAR) COLOUR(BLUE)
09 TYPE(CHAR) COLOUR(MAGENTA)
0A TYPE(CHAR) COLOUR(TURQ)
0B TYPE(CHAR) COLOUR(WHITE)
0C TYPE(CHAR) COLOUR(RED)
0D TYPE(CHAR) COLOUR(GREEN)
0E TYPE(CHAR) COLOUR(RED)   HILITE(REVERSE)
0F TYPE(CHAR) COLOUR(WHITE) HILITE(REVERSE)

10 TYPE(DATAIN)  INTENS(LOW)  COLOUR(&ZEDOCLR)
11 TYPE(DATAIN)  INTENS(HIGH) COLOUR(&ZEDOCLR)

50 TYPE(CHAR) COLOUR(&ZEDFCLR) HILITE(&ZEDFHLT)
51 TYPE(CHAR) COLOUR(&ZEDPCLR) HILITE(&ZEDPHLT)

52 TYPE(CHAR) COLOUR(RED)    HILITE(USCORE)
53 TYPE(CHAR) COLOUR(GREEN)  HILITE(USCORE)
54 TYPE(CHAR) COLOUR(YELLOW) HILITE(USCORE)
55 TYPE(CHAR) COLOUR(BLUE)   HILITE(USCORE)
56 TYPE(CHAR) COLOUR(WHITE)  HILITE(USCORE)

)ABC DESC(File) MNEM(1)
PDC DESC(Save) UNAVAIL(ZVMD)
 ACTION RUN(>SAVE)
PDC DESC(Cancel)
 ACTION RUN(CANCEL)
PDC DESC(Exit)
 ACTION RUN(END)

)ABCINIT
IF (&ZVMODE EQ 'EDIT') &ZVMD = '0'
ELSE                   &ZVMD = '1'

)ABC DESC(Edit) MNEM(1)
PDC DESC(Reset)
 ACTION RUN(>RESET)
PDC DESC(Undo)
 ACTION RUN(>UNDO)
PDC DESC(Redo)
 ACTION RUN(>REDO)
PDC DESC(Hilite)
 ACTION RUN(>HI)
PDC DESC(Cut)
 ACTION RUN(>CUT)
PDC DESC(Paste)
 ACTION RUN(>PASTE)

)ABC DESC(Edit_Settings) MNEM(3)
PDC DESC('Edit Settings')
 ACTION RUN(>EDITSET)

)INCLUDE STD_PDC
)INCLUDE HLP_PDC


)BODY SCROLL(ZSCROLL)
PanelDesc "&ZVMODE &ZEDALT"

field     3   2     4       VOI  NONE ZVMODE
field     3   10    MAX-20  VOI  NONE ZEDALT

text      4   2             FP "Command ===>"
field     4   15    MAX-17  NEF PAD(USER) ZCMD

text      4   MAX-15        FP  "Scroll ===>"
field     4   MAX-3   4     NEF  NONE  ZSCROLL

text      3   MAX-18        FP  "Columns"
field     3   MAX-10  5     VOI  NONE ZCOL1
field     3   MAX-4   5     VOI  NONE ZCOL2

dynArea   5 1 MAX MAX ZAREA ZSHADOW USERMOD(10) DATAMOD(11) SCROLL(ON)

)INIT
.EDIT = YES

IF (&ZSCROLL = &Z) &ZSCROLL = &ZSCROLLD

)PROC

IF (.MSG = &Z) VPUT ZSCROLL PROFILE

)END
