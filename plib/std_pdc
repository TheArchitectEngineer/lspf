 ACTION RUN(ISRROUTE) PARM('SELECT PGM(PPSP01A) PARM(GCL) SCRNAME(COLOURS)')
PDC  DESC('Command Tables') UNAVAIL(ZPS4)
 ACTION RUN(CMDS)
