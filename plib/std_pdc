)COMMENT
  Standard pull down choices
)ENDCOMMENT

)ABC DESC(Menu) MNEM(1)
PDC  DESC('Settings') UNAVAIL(ZPM1)
 ACTION RUN(SETTINGS)
PDC  DESC('View') UNAVAIL(ZPM2)
 ACTION RUN(ISRROUTE) PARM('SELECT PGM(PPSP01A) PARM(BROWSEE) SCRNAME(VIEW)')
PDC  DESC('Edit') UNAVAIL(ZPM3)
 ACTION RUN(ISRROUTE) PARM('SELECT PGM(PPSP01A) PARM(EDITEE) SCRNAME(VIEW)')
PDC  DESC('Utilities') UNAVAIL(ZPM4)
 ACTION RUN(ISRROUTE) PARM('SELECT PANEL(PPSUTIL1) NEWPOOL SCRNAME(UTIL)')
PDC  DESC('Testing') UNAVAIL(ZPM5)
 ACTION RUN(ISRROUTE) PARM('SELECT PANEL(PPTEST01) NEWPOOL NEWAPPL(TEST) SCRNAME(TESTING)')
PDC  DESC('Tasks') UNAVAIL(ZPM6)
 ACTION RUN(ISRROUTE) PARM('SELECT PGM(PPSP01A) NEWAPPL(TASK) PARM(TASKS) SCRNAME(TASKS)')
PDC  DESC('Command') UNAVAIL(ZPM7)
 ACTION RUN(ISRROUTE) PARM('SELECT PGM(PCMD0A) NEWAPPL SCRNAME(COMMANDS)')
PDC  DESC('Dialogue') UNAVAIL(ZPM8)
 ACTION RUN(ISRROUTE) PARM('SELECT PANEL(PDLGTST1) NEWPOOL NEWAPPL')
PDC  DESC('lspf Log') UNAVAIL(ZUS1)
 ACTION RUN(LOG)
PDC  DESC('Application Log') UNAVAIL(ZUS0)
 ACTION RUN(ALOG)
PDC  DESC('Functions') UNAVAIL(ZPM9)
 ACTION RUN(ISRROUTE) PARM('SELECT CMD(%porexx5) NEWAPPL(NAPL) LANG(REXX) SCRNAME(RUNAPPL)')

)ABCINIT

)ABC DESC(Display) MNEM(1)
