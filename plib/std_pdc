)ABCINIT

)ABC DESC(Settings) MNEM(1)
PDC  DESC('General lspf Settings') UNAVAIL(ZPS0)
 ACTION RUN(ISRROUTE) PARM('SELECT PGM(PPSP01A) PARM(GOPTS) SCRNAME(SETTINGS)')
PDC  DESC('PF Keys') UNAVAIL(ZPS1)
 ACTION RUN(KEYS)
