 ACTION RUN(ISRROUTE) PARM('SELECT PGM(PPSP01A) PARM(SETVAR ZKLUSE Y)')
PDC  DESC('Disable Keylists') UNAVAIL(ZPS8)
 ACTION RUN(ISRROUTE) PARM('SELECT PGM(PPSP01A) PARM(SETVAR ZKLUSE N)')

)ABCINIT
.ZVARS = PD1SEL
VGET ZKLUSE PROFILE
IF (&ZKLUSE EQ Y)
   &ZPS7 = 1
   &ZPS8 = 0
ELSE
   &ZPS7 = 0
   &ZPS8 = 1

)ABC DESC(Utilities) MNEM(1)
PDC  DESC('File/directory') UNAVAIL(ZUS2)
 ACTION RUN(ISRROUTE) PARM('SELECT PGM(&ZFLSTPGM) PARM()')
