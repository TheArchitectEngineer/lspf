VER(&RGBB2,NUM)
IF (&RGBB2 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBB2
   EXIT

VER(&RGBR3,NUM)
IF (&RGBR3 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBR3
   EXIT

VER(&RGBG3,NUM)
IF (&RGBG3 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBG3
