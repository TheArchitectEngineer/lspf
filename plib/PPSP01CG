IF (&RGBG5 EQ &Z) &RGBG5 = '0'
IF (&RGBB5 EQ &Z) &RGBB5 = '0'

IF (&RGBR6 EQ &Z) &RGBR6 = '0'
IF (&RGBG6 EQ &Z) &RGBG6 = '0'
IF (&RGBB6 EQ &Z) &RGBB6 = '0'

IF (&RGBR7 EQ &Z) &RGBR7 = '0'
IF (&RGBG7 EQ &Z) &RGBG7 = '0'
IF (&RGBB7 EQ &Z) &RGBB7 = '0'

VER(&RGBR1,NUM)
IF (&RGBR1 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBR1
   EXIT

VER(&RGBG1,NUM)
IF (&RGBG1 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBG1
