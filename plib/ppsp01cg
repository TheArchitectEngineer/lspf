)PANEL VERSION=1 FORMAT=1
)COMMENT
)ENDCOMMENT

)ATTR
01 TYPE(OUTPUT) PAD(' ') COLOUR(RED)     HILITE(REVERSE)
02 TYPE(OUTPUT) PAD(' ') COLOUR(GREEN)   HILITE(REVERSE)
03 TYPE(OUTPUT) PAD(' ') COLOUR(YELLOW)  HILITE(REVERSE)
04 TYPE(OUTPUT) PAD(' ') COLOUR(BLUE)    HILITE(REVERSE)
05 TYPE(OUTPUT) PAD(' ') COLOUR(MAGENTA) HILITE(REVERSE)
06 TYPE(OUTPUT) PAD(' ') COLOUR(TURQ)    HILITE(REVERSE)
07 TYPE(OUTPUT) PAD(' ') COLOUR(WHITE)   HILITE(REVERSE)

! TYPE(OUTPUT) PAS(ON) CAPS(OFF)
@ TYPE(PIN)

)INCLUDE std_pdc
)INCLUDE hlp_pdc

)BODY WINDOW(78,19)
PANELTITLE 'RGB Settings'

TEXT     4   2   FP 'Command ===> '
FIELD    4  15  MAX  NEF CAPS(ON),PAD(USER) ZCMD

AREA   5 1      MAX  MAX   SAREA1

)AREA SAREA1
TEXT     1   2   CH 'RGB values'

TEXT     3   2   FP  'Red. . . . . R:'
FIELD    3   18  3  NEF CAPS(ON),PAD(USER),NUMERIC(ON) RGBR1
TEXT     3   22  FP  'G:'
FIELD    3   25  3  NEF CAPS(ON),PAD(USER),NUMERIC(ON) RGBG1
TEXT     3   30  FP  'B:'
FIELD    3   33  3  NEF CAPS(ON),PAD(USER),NUMERIC(ON) RGBB1
FIELD    3   37  25  ATTR(01) RGBX1

TEXT    4    2   FP  'Green. . . . R:'
FIELD   4    18  3  NEF CAPS(ON),PAD(USER),NUMERIC(ON) RGBR2
TEXT    4    22  FP  'G:'
