TEXT    8    30  FP  'B:'
FIELD   8    33  3  NEF CAPS(ON),PAD(USER),NUMERIC(ON) RGBB6
FIELD   8    37  25  ATTR(06) RGBX6

TEXT    9    2   FP  'White. . . . R:'
FIELD   9    18  3  NEF CAPS(ON),PAD(USER),NUMERIC(ON) RGBR7
TEXT    9    22  FP  'G:'
FIELD   9    25  3  NEF CAPS(ON),PAD(USER),NUMERIC(ON) RGBG7
TEXT    9    30  FP  'B:'
FIELD   9    33  3  NEF CAPS(ON),PAD(USER),NUMERIC(ON) RGBB7
FIELD   9    37  25  ATTR(07) RGBX7

TEXT     11  2  49   ATTR(@) '&TXT1'
TEXT     12  2  5    ATTR(@) '&TXT2'
FIELD    12  8  8    ATTR(!) RGBDEFS
TEXT     12  17 19   ATTR(@) '&TXT3'

)INIT
&ZWINTTL = &Z
&ZCMD    = &Z
&ZPS3    = 1
.CURSOR  = ZCMD

&RGBX1 = '>                       <'
&RGBX2 = '>                       <'
&RGBX3 = '>                       <'
&RGBX4 = '>                       <'
&RGBX5 = '>                       <'
&RGBX6 = '>                       <'
&RGBX7 = '>                       <'

IF (&ZCHGCOLR EQ NO)
   .ATTR(RGBR1) = 'TYPE(OUTPUT)'
   .ATTR(RGBG1) = 'TYPE(OUTPUT)'
   .ATTR(RGBB1) = 'TYPE(OUTPUT)'
   .ATTR(RGBR2) = 'TYPE(OUTPUT)'
   .ATTR(RGBG2) = 'TYPE(OUTPUT)'
   .ATTR(RGBB2) = 'TYPE(OUTPUT)'
   .ATTR(RGBR3) = 'TYPE(OUTPUT)'
   .ATTR(RGBG3) = 'TYPE(OUTPUT)'
   .ATTR(RGBB3) = 'TYPE(OUTPUT)'
   .ATTR(RGBR4) = 'TYPE(OUTPUT)'
   .ATTR(RGBG4) = 'TYPE(OUTPUT)'
   .ATTR(RGBB4) = 'TYPE(OUTPUT)'
   .ATTR(RGBR5) = 'TYPE(OUTPUT)'
   .ATTR(RGBG5) = 'TYPE(OUTPUT)'
   .ATTR(RGBB5) = 'TYPE(OUTPUT)'
   .ATTR(RGBR6) = 'TYPE(OUTPUT)'
   .ATTR(RGBG6) = 'TYPE(OUTPUT)'
   .ATTR(RGBB6) = 'TYPE(OUTPUT)'
   .ATTR(RGBR7) = 'TYPE(OUTPUT)'
   .ATTR(RGBG7) = 'TYPE(OUTPUT)'
   .ATTR(RGBB7) = 'TYPE(OUTPUT)'
   .ATTR(RGBDEFS) = 'PAS(OFF)'
   &TXT1    = 'Terminal does not support changing colour content'
   &TXT2    = &Z
   &RGBDEFS = &Z
   &TXT3    = &Z
ELSE
   &TXT1    = 'Enter RGB values for colours (0-255)'
   &TXT2    = 'Enter'
   &RGBDEFS = 'Defaults'
   &TXT3    = 'to restore defaults'

)REINIT
.ATTR(.CURSOR) = 'TYPE(INPUT) COLOUR(RED)'

)PROC
IF (&ZCHGCOLR EQ NO)
   IF (&ZCMD NE &Z )
      .MSG    = PSYS011C
      .CURSOR = ZCMD
      EXIT
ELSE
   &ZCMD = TRANS( &ZCMD DEF,DEFAULTS
                        DEFAULT,DEFAULTS
                        DEFAULTS,DEFAULTS
                        &Z,&Z
                        MSG=PSYS018
                )
   IF (&ZCMD EQ 'DEFAULTS') EXIT

IF (&RGBR1 EQ &Z) &RGBR1 = '0'
IF (&RGBG1 EQ &Z) &RGBG1 = '0'
IF (&RGBB1 EQ &Z) &RGBB1 = '0'

IF (&RGBR2 EQ &Z) &RGBR2 = '0'
IF (&RGBG2 EQ &Z) &RGBG2 = '0'
IF (&RGBB2 EQ &Z) &RGBB2 = '0'

IF (&RGBR3 EQ &Z) &RGBR3 = '0'
IF (&RGBG3 EQ &Z) &RGBG3 = '0'
IF (&RGBB3 EQ &Z) &RGBB3 = '0'

IF (&RGBR4 EQ &Z) &RGBR4 = '0'
IF (&RGBG4 EQ &Z) &RGBG4 = '0'
IF (&RGBB4 EQ &Z) &RGBB4 = '0'

IF (&RGBR5 EQ &Z) &RGBR5 = '0'
IF (&RGBG5 EQ &Z) &RGBG5 = '0'
IF (&RGBB5 EQ &Z) &RGBB5 = '0'

IF (&RGBR6 EQ &Z) &RGBR6 = '0'
IF (&RGBG6 EQ &Z) &RGBG6 = '0'
IF (&RGBB6 EQ &Z) &RGBB6 = '0'

IF (&RGBR7 EQ &Z) &RGBR7 = '0'
IF (&RGBG7 EQ &Z) &RGBG7 = '0'
IF (&RGBB7 EQ &Z) &RGBB7 = '0'

VER (&RGBR1,NUM)
IF (&RGBR1 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBR1
   EXIT

VER (&RGBG1,NUM)
IF (&RGBG1 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBG1
   EXIT

VER (&RGBB1,NUM)
IF (&RGBB1 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBB1
   EXIT

VER (&RGBR2,NUM)
IF (&RGBR2 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBR2
   EXIT

VER (&RGBG2,NUM)
IF (&RGBG2 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBG2
   EXIT

VER (&RGBB2,NUM)
IF (&RGBB2 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBB2
   EXIT

VER (&RGBR3,NUM)
IF (&RGBR3 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBR3
   EXIT

VER (&RGBG3,NUM)
IF (&RGBG3 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBG3
   EXIT

VER (&RGBB3,NUM)
IF (&RGBB3 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBB3
   EXIT

VER (&RGBR4,NUM)
IF (&RGBR4 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBR4
   EXIT

VER (&RGBG4,NUM)
IF (&RGBG4 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBG4
   EXIT

VER (&RGBB4,NUM)
IF (&RGBB4 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBB4
   EXIT

VER (&RGBR5,NUM)
IF (&RGBR5 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBR5
   EXIT

VER (&RGBG5,NUM)
IF (&RGBG5 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBG5
   EXIT

VER (&RGBB5,NUM)
IF (&RGBB5 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBB5
   EXIT

VER (&RGBR6,NUM)
IF (&RGBR6 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBR6
   EXIT

VER (&RGBG6,NUM)
IF (&RGBG6 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBG6
   EXIT

VER (&RGBB6,NUM)
IF (&RGBB6 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBB6
   EXIT

VER (&RGBR7,NUM)
IF (&RGBR7 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBR7
   EXIT

VER (&RGBG7,NUM)
IF (&RGBG7 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBG7
   EXIT

VER (&RGBB7,NUM)
IF (&RGBB7 GT 255)
   .MSG    = PSYS013D
   .CURSOR = RGBB7
   EXIT

)PNTS
FIELD(RGBDEFS) VAR(ZCMD) VAL(DEFAULTS)

)END
