)COMMENT
 RefMode pulldown choices
)ENDCOMMENT

)ABC DESC(RefMode)
PDC  DESC("List Execute")
ACTION RUN(ISRROUTE) PARM("SELECT PGM(PPSP01A) PARM(SETVAR ZRFMOD BEX)") UNAVAIL(ZRUN0)
PDC  DESC("List Retrieve")
ACTION RUN(ISRROUTE) PARM("SELECT PGM(PPSP01A) PARM(SETVAR ZRFMOD BRT)") UNAVAIL(ZRUN1)
PDC  DESC("Personal Settings")
ACTION RUN(ISRROUTE) PARM("SELECT PGM(PLRFLST1) PARM(US1) NEWAPPL(ISP)")

)ABCINIT
IF (&ZRFMOD EQ BEX)
   &ZRUN0 = 1
   &ZRUN1 = 0
ELSE
   IF (&ZRFMOD EQ BRT)
      &ZRUN0 = 0
      &ZRUN1 = 1
