)PANEL VERSION=1 FORMAT=1 KEYLIST(ISRSAB,ISR)

)COMMENT
Panel for editor PEDIT01
)ENDCOMMENT

)ATTR
/* COLOUR(), HILITE() and INTENS() only are recognised for TYPE(CHAR) */
/* HILITE - BLINK/REVERSE/USCORE                                      */
/* INTENS - HIGH/LOW/NON                                              */
/* COLOUR - WHITE/RED/BLUE/GREEN/PINK(MAGENTA)/YELLOW/TURQ            */

01 TYPE(DATAIN)  INTENS(LOW)  COLOUR(&ZEDOCLR)
02 TYPE(DATAIN)  INTENS(HIGH) COLOUR(&ZEDOCLR)

03 TYPE(DATAOUT) INTENS(LOW)
04 TYPE(DATAOUT) INTENS(HIGH)

05 TYPE(CHAR) COLOUR(GREEN)
06 TYPE(CHAR) COLOUR(BLUE)
07 TYPE(CHAR) COLOUR(WHITE)
08 TYPE(CHAR) COLOUR(RED)
09 TYPE(CHAR) COLOUR(TURQ)
0A TYPE(CHAR) COLOUR(MAGENTA)
0B TYPE(CHAR) COLOUR(YELLOW)
0C TYPE(CHAR) COLOUR(WHITE)
0D TYPE(CHAR) COLOUR(RED)
0E TYPE(CHAR) COLOUR(TURQ)
0F TYPE(CHAR) COLOUR(MAGENTA)

10 TYPE(DATAIN)  INTENS(LOW)  COLOUR(&ZEDOCLR)
11 TYPE(DATAIN)  INTENS(HIGH) COLOUR(&ZEDOCLR)

50 TYPE(CHAR) COLOUR(&ZEDFCLR) HILITE(&ZEDFHLT)
51 TYPE(CHAR) COLOUR(&ZEDPCLR) HILITE(&ZEDPHLT)

52 TYPE(CHAR) COLOUR(GREEN)   HILITE(USCORE)
53 TYPE(CHAR) COLOUR(BLUE)    HILITE(USCORE)
54 TYPE(CHAR) COLOUR(WHITE)   HILITE(USCORE)
55 TYPE(CHAR) COLOUR(RED)     HILITE(USCORE)
56 TYPE(CHAR) COLOUR(TURQ)    HILITE(USCORE)
57 TYPE(CHAR) COLOUR(MAGENTA) HILITE(USCORE)
58 TYPE(CHAR) COLOUR(YELLOW)  HILITE(USCORE)

60 TYPE(CHAR) COLOUR(GREEN)   HILITE(REVERSE)
61 TYPE(CHAR) COLOUR(BLUE)    HILITE(REVERSE)
62 TYPE(CHAR) COLOUR(WHITE)   HILITE(REVERSE)
63 TYPE(CHAR) COLOUR(RED)     HILITE(REVERSE)
64 TYPE(CHAR) COLOUR(TURQ)    HILITE(REVERSE)
65 TYPE(CHAR) COLOUR(MAGENTA) HILITE(REVERSE)
66 TYPE(CHAR) COLOUR(YELLOW)  HILITE(REVERSE)

80 TYPE(CHAR) COLOUR(&ZEDCLRG)
81 TYPE(CHAR) COLOUR(&ZEDCLRB)
82 TYPE(CHAR) COLOUR(&ZEDCLRW)
83 TYPE(CHAR) COLOUR(&ZEDCLRR)
84 TYPE(CHAR) COLOUR(&ZEDCLRT)
85 TYPE(CHAR) COLOUR(&ZEDCLRM)
86 TYPE(CHAR) COLOUR(&ZEDCLRY)

90 TYPE(CHAR) COLOUR(&ZEDCLRD) HILITE(&ZEDHID)
91 TYPE(CHAR) COLOUR(&ZEDCLRC) HILITE(&ZEDHIC)
92 TYPE(CHAR) COLOUR(&ZEDCLRK) HILITE(&ZEDHIK)
93 TYPE(CHAR) COLOUR(&ZEDCLRQ) HILITE(&ZEDHIQ)
94 TYPE(CHAR) COLOUR(&ZEDCLRV) HILITE(&ZEDHIV)
95 TYPE(CHAR) COLOUR(&ZEDCLRS) HILITE(&ZEDHIS)

)ABC DESC(File) MNEM(1)
PDC DESC(Save) UNAVAIL(ZVMD)
 ACTION RUN(>SAVE)
PDC DESC(Cancel)
 ACTION RUN(CANCEL)
PDC DESC(Exit)
 ACTION RUN(END)

)ABCINIT
IF (&ZVMODE EQ 'EDIT') &ZVMD = '0'
ELSE                   &ZVMD = '1'

)ABC DESC(Edit) MNEM(1)
PDC DESC(Reset)
 ACTION RUN(>RESET)
PDC DESC(Undo)
 ACTION RUN(>UNDO)
PDC DESC(Redo)
 ACTION RUN(>REDO)
PDC DESC(Hilite)
 ACTION RUN(>HI)
PDC DESC(Cut)
 ACTION RUN(>CUT)
PDC DESC(Paste)
 ACTION RUN(>PASTE)

)ABCINIT

)ABC DESC(Edit_Settings) MNEM(3)
PDC DESC('Edit Settings')
 ACTION RUN(>EDITSET)

)ABCINIT

)INCLUDE std_pdc
)INCLUDE hlp_pdc


)BODY
PANELDESC '&ZVMODE &ZEDALT'

FIELD   3   2       4       VOI  NONE ZVMODE
FIELD   3   10      MAX-24  VOI  NONE ZEDALT
FIELD   3   MAX-22  2       LI   NONE ZEDALIND

TEXT    4   2             FP 'Command ===>'
FIELD   4   15    MAX-17  NEF PAD(USER) ZCMD

TEXT    4   MAX-15        FP  'Scroll ===>'
FIELD   4   MAX-3   4     NEF  NONE  ZSCED

TEXT    3   MAX-18        FP  'Columns'
FIELD   3   MAX-10  5     VOI  NONE ZCOL1
FIELD   3   MAX-4   5     VOI  NONE ZCOL2

DYNAREA 5 1 MAX MAX ZAREA ZSHADOW USERMOD(10) DATAMOD(11)
            SCROLL(ON) OPREF(ZOVR) OLEN(ZOLEN)

)INIT
.EDIT = YES
.HELP = LSPED001

IF (&ZSCED = &Z) &ZSCED = &ZSCROLLD

)PROC
&ZLVLINE = LVLINE(ZAREA)
IF (.MSG = &Z) VPUT ZSCED PROFILE

VGET ZVERB SHARED

)FIELD
FIELD(ZEDALT) LEN(4095) IND(ZEDALIND) SCROLL(FSCROLL)

)END
