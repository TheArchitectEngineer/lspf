)PANEL VERSION=1 FORMAT=1

)COMMENT
VIEW warning on exiting with data changes
)ENDCOMMENT

)BODY HOME(ZCMD1) CMD(ZCMD1) WINDOW(57,11)
PanelDesc "View Warning"

text     2    2       FP     "Command ===> "
field    2   15  MAX  NEF     PAD(USER) ZCMD1

text     4    14      NT     "You are currently in VIEW mode"

text    6   2   CH "Instructions"
text    8   2   NT "Press"
text    8   8   ET "ENTER"
text    8   14  NT "key to confirm exit from VIEW"
text    10  2   NT "Enter"
text    10  8   ET "END"
text    10  12  NT "to return to VIEW."

)INIT

&ZCMD1   = &Z
&ZWINTTL = 'View Warning'

VGET ZVERB SHARED
IF (&ZVERB EQ 'RETURN')
  .RESP = ENTER
  .MSG  = PEDT016O

)PROC
if ( &ZCMD1 NE &Z)
  .MSG    = PSYS018
  .CURSOR = ZCMD1
  EXIT

)END
