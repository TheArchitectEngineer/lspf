)PANEL VERSION=1 FORMAT=1

)COMMENT

   Error panel to display a message.
   Also ZERRDSC and ZERRSRC for the description of the source and the statement in error

)ENDCOMMENT

)INCLUDE STD_PDC
)INCLUDE HLP_PDC

)BODY

PanelTitle "Dialogue Error in &ZERRTTL"

literal 4   2      FP  "Command ===>"
field   4  15 MAX  NEF  CAPS(ON),PAD(USER) ZCMD

literal 7     2 ET EXPAND "*"

literal 8       2 ET "*"
literal 8  MAX ET "*"

literal 9       2 ET "*"
literal 9  MAX ET "*"

literal 10      2 ET "*"
literal 10 MAX ET "*"

literal 11       2 ET "*"
literal 11  MAX ET "*"

literal 12       2 ET "*"
literal 12  MAX ET "*"

literal 13       2 ET "*"
literal 13  MAX ET "*"

literal 14       2 ET "*"
literal 14  MAX ET "*"

literal 15       2 ET "*"
literal 15  MAX ET "*"

literal 16       2 ET "*"
literal 16  MAX ET "*"

literal 17       2 ET "*"
literal 17  MAX ET "*"

literal 18       2 ET "*"
literal 18  MAX ET "*"

literal 19       2 ET "*"
literal 19  MAX ET "*"

literal 20       2 ET "*"
literal 20  MAX ET "*"

literal 21       2 ET "*"
literal 21  MAX ET "*"

literal 22       2 ET "*"
literal 22  MAX ET "*"

literal 23       2 ET "*"
literal 23  MAX ET "*"

literal 24       2 ET "*"
literal 24  MAX ET "*"

literal 25       2 ET "*"
literal 25  MAX ET "*"

literal 26       2 ET "*"
literal 26  MAX ET "*"

literal 27       2 ET "*"
literal 27  MAX ET "*"

literal 28      2 ET EXPAND "*"

field    9 4  MAX-2 ET NONE ZERRMSG
field   11 4  MAX-2 ET NONE ZERRSM
field   12 4  MAX-2 ET NONE ZERRLM1
field   13 4  MAX-2 ET NONE ZERRLM2
field   14 4  MAX-2 ET NONE ZERRLM3
field   15 4  MAX-2 ET NONE ZERRLM4
field   16 4  MAX-2 ET NONE ZERRLM5
field   17 4  MAX-2 ET NONE ZERRLM6
field   18 4  MAX-2 ET NONE ZERRLM7
field   19 4  MAX-2 ET NONE ZERRLM8
field   20 4  MAX-2 ET NONE ZERRDS1
field   21 4  MAX-2 ET NONE ZERRSRC

literal 24 4   NT "See application and lspf logs for more messages"

literal 26 4   NT "Press"
literal 26 10  ET "ENTER"
literal 26 16  NT "to terminate dialogue"

)INIT
.CURSOR = ZCMD
&ZCMD   = &Z

IF ( &ZERRDSC EQ 'P' )
   &ZERRDS1 = 'Panel line where error was detected:'
ELSE
   IF ( &ZERRDSC EQ 'D' )
      &ZERRDS1 = 'Current dialogue statement:'
   ELSE
      &ZERRDS1 = &ZERRDSC

IF (&ZERRRX EQ &Z)
   &ZERRTTL = 'application &ZAPPNAME'
ELSE
   &ZERRTTL = 'REXX application &ZERRRX'

)PROC

)END
