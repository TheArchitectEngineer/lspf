)COMMENT
  Standard pull down choices
)ENDCOMMENT

)ABC DESC(Display)
PDC  DESC("Refresh Screen")
 ACTION RUN(REFRESH)
PDC  DESC("Discard Screen Updates")
 ACTION RUN(DISCARD)
PDC  DESC(Quit)
 ACTION RUN(END)


)ABC DESC(Settings)
PDC  DESC("General Settings")
 ACTION RUN(ISRROUTE) PARM("SELECT PGM(PPSP01A) PARM(GOPTS) SCRNAME(SETTINGS)") UNAVAIL(ZPS0)
PDC  DESC("PFKeys")
 ACTION RUN(KEYS) UNAVAIL(ZPS1)
PDC  DESC("CUA Colours")
 ACTION RUN(CUA) UNAVAIL(ZPS2)
PDC  DESC("Global Colours")
 ACTION RUN(ISRROUTE) PARM("SELECT PGM(PPSP01A) PARM(GCL) SCRNAME(COLOURS)") UNAVAIL(ZPS3)
PDC  DESC("Command Tables")
 ACTION RUN(CMDS) UNAVAIL(ZPS4)
PDC  DESC("Keylist Utility")
 ACTION RUN(ISRROUTE) PARM("SELECT PGM(PPSP01A) PARM(KLISTS)") UNAVAIL(ZPS5)
PDC  DESC("Configure Control Keys")
 ACTION RUN(ISRROUTE) PARM("SELECT PGM(PPSP01A) PARM(CTLKEYS)") UNAVAIL(ZPS6)
PDC  DESC("Turn On Keylists")
 ACTION RUN(ISRROUTE) PARM("SELECT PGM(PPSP01A) PARM(SETVAR ZKLUSE Y)") UNAVAIL(ZPS7)
PDC  DESC("Turn Off Keylists")
 ACTION RUN(ISRROUTE) PARM("SELECT PGM(PPSP01A) PARM(SETVAR ZKLUSE N)") UNAVAIL(ZPS8)

)ABCINIT
.ZVARS = PDCHOICE
IF (&ZKLUSE EQ Y)
   &ZPS7 = 1
   &ZPS8 = 0
ELSE
   &ZPS7 = 0
   &ZPS8 = 1

)ABC DESC(Utilities)
PDC  DESC("Application Log")
 ACTION RUN(ALOG) UNAVAIL(ZUS0)
PDC  DESC("lspf Log")
 ACTION RUN(ISRROUTE) PARM("SELECT PGM(PPSP01A) PARM(SL)") UNAVAIL(ZUS1)
PDC  DESC("File/Directory")
 ACTION RUN(ISRROUTE) PARM("SELECT PGM(&ZFLSTPGM) PARM()") UNAVAIL(ZUS2)
PDC  DESC("Saved File List")
 ACTION RUN(ISRROUTE) PARM("SELECT PGM(PPSP01A) PARM(SAVELST) NEWAPPL(ISP)") UNAVAIL(ZUS3)
PDC  DESC("ishell")
 ACTION RUN(ISRROUTE) PARM("SELECT PGM(PCMD0A) NEWAPPL(ISP)") UNAVAIL(ZUS4)
PDC  DESC("oshell")
 ACTION RUN(ISRROUTE) PARM("SELECT PGM(PCMD0B) NEWAPPL(ISP)") UNAVAIL(ZUS5)
PDC  DESC("Split screen")
 ACTION RUN(ISRROUTE) PARM("SELECT PGM(ISPSTRT)") UNAVAIL(ZUS6)
