)PANEL VERSION=1 FORMAT=1
)COMMENT
 Panel for Issuing commands
)ENDCOMMENT

)INCLUDE STD_PDC

)ABC DESC(List)
PDC  DESC("Update On")
ACTION RUN(>CMDUPN) UNAVAIL(ZCU0)
PDC  DESC("Update Off")
ACTION RUN(>CMDUPF) UNAVAIL(ZCU1)

)ABCINIT
IF (&LIST EQ ON)
   &ZCU0 = 1
   &ZCU1 = 0
ELSE
   &ZCU0 = 0
   &ZCU1 = 1


)ABC DESC(Mode)
PDC  DESC("Retrieve")
ACTION RUN(>CMDRET) UNAVAIL(ZMD0)
PDC  DESC("Execute")
ACTION RUN(>CMDEXE) UNAVAIL(ZMD1)
PDC  DESC("Delete")
ACTION RUN(>CMDDEL) UNAVAIL(ZMD2)

)ABCINIT
IF (&MODE EQ CMDRET)
   &ZMD0 = 1
   &ZMD1 = 0
   &ZMD2 = 0
ELSE
  IF (&MODE EQ CMDEXE)
     &ZMD0 = 0
     &ZMD1 = 1
     &ZMD2 = 0
  ELSE
     &ZMD0 = 0
     &ZMD1 = 0
     &ZMD2 = 1

)INCLUDE HLP_PDC

)BODY CMD(ZCMD)

PanelTitle "Execute Command"

literal   4  2        CH  "Enter command below"

literal   6  2        FP  "===>"
field     6  7   MAX  NEF CAPS(OFF),PAD(USER) ZCMD

literal   8   2       NT  "Place cursor on choice and press enter to &TYPE command"
literal  10   2       FP  "=>"
field    10   5  MAX NEF CAPS(OFF),PAD(USER) ZKMD1
literal  11   2       FP  "=>"
field    11   5  MAX NEF CAPS(OFF),PAD(USER) ZKMD2
literal  12   2       FP  "=>"
field    12   5  MAX NEF CAPS(OFF),PAD(USER) ZKMD3
literal  13   2       FP  "=>"
field    13   5  MAX NEF CAPS(OFF),PAD(USER) ZKMD4
literal  14   2       FP  "=>"
field    14   5  MAX NEF CAPS(OFF),PAD(USER) ZKMD5
literal  15   2       FP  "=>"
field    15   5  MAX NEF CAPS(OFF),PAD(USER) ZKMD6
literal  16   2       FP  "=>"
field    16   5  MAX NEF CAPS(OFF),PAD(USER) ZKMD7
literal  17   2       FP  "=>"
field    17   5  MAX NEF CAPS(OFF),PAD(USER) ZKMD8
literal  18   2       FP  "=>"
field    18   5  MAX NEF CAPS(OFF),PAD(USER) ZKMD9
literal  19   2       FP  "=>"
field    19   5  MAX NEF CAPS(OFF),PAD(USER) ZKMD10
literal  20   2       FP  "=>"
field    20   5  MAX NEF CAPS(OFF),PAD(USER) ZKMD11
literal  21   2       FP  "=>"
field    21   5  MAX NEF CAPS(OFF),PAD(USER) ZKMD12

)INIT
.CURSOR = ZCMD
&ZUS4   = 1

VGET (LIST,MODE,ZKMD1,ZKMD2,ZKMD3,ZKMD4,ZKMD5,ZKMD6) PROFILE
VGET (ZKMD7,ZKMD8,ZKMD9,ZKMD10,ZKMD11,ZKMD12) PROFILE

IF (&LIST EQ &Z) &LIST = ON
IF (&MODE EQ &Z) &MODE = CMDRET

IF (&MODE EQ CMDRET)
   &TYPE = 'retreive'
ELSE
  IF (&MODE EQ CMDEXE)
     &TYPE = 'execute'
  ELSE
     &TYPE = 'delete'

)REINIT
REFRESH(*)

)PROC

IF (&ZCMD EQ CMDRET,CMDEXE,CMDDEL)
   &MODE = &ZCMD
   &ZCMD = &Z
   VPUT MODE PROFILE

IF (&ZCMD EQ CMDUPN)
   &LIST = ON
   &ZCMD = &Z
   VPUT LIST PROFILE
ELSE
  IF (&ZCMD EQ CMDUPF)
     &LIST = OFF
     &ZCMD = &Z
     VPUT LIST PROFILE

IF (.CURSOR EQ ZKMD1)
   IF (&MODE EQ CMDDEL)
      &ZKMD1 = &Z
      VPUT ZKMD1 PROFILE
      EXIT
   &ZCMD = &ZKMD1
   IF (&MODE EQ CMDRET)
      .MSG = PSYS011V
      EXIT
ELSE
   IF (.CURSOR EQ ZKMD2)
      IF (&MODE EQ CMDDEL)
         &ZKMD2 = &Z
         VPUT ZKMD2 PROFILE
         EXIT
      &ZCMD = &ZKMD2
      IF (&MODE EQ CMDRET)
         .MSG = PSYS011V
         EXIT
   ELSE
      IF (.CURSOR EQ ZKMD3)
         IF (&MODE EQ CMDDEL)
            &ZKMD3 = &Z
            VPUT ZKMD3 PROFILE
            EXIT
         &ZCMD = &ZKMD3
         IF (&MODE EQ CMDRET)
            .MSG = PSYS011V
            EXIT
      ELSE
         IF (.CURSOR EQ ZKMD4)
            IF (&MODE EQ CMDDEL)
               &ZKMD4 = &Z
               VPUT ZKMD4 PROFILE
               EXIT
            &ZCMD = &ZKMD4
            IF (&MODE EQ CMDRET)
               .MSG = PSYS011V
               EXIT
         ELSE
            IF (.CURSOR EQ ZKMD5)
               IF (&MODE EQ CMDDEL)
                  &ZKMD5 = &Z
                  VPUT ZKMD5 PROFILE
                  EXIT
               &ZCMD = &ZKMD5
               IF (&MODE EQ CMDRET)
                  .MSG = PSYS011V
                  EXIT
            ELSE
               IF (.CURSOR EQ ZKMD6)
                  IF (&MODE EQ CMDDEL)
                     &ZKMD6 = &Z
                     VPUT ZKMD6 PROFILE
                     EXIT
                  &ZCMD = &ZKMD6
                  IF (&MODE EQ CMDRET)
                     .MSG = PSYS011V
                     EXIT
               ELSE
                  IF (.CURSOR EQ ZKMD7)
                     IF (&MODE EQ CMDDEL)
                        &ZKMD7 = &Z
                        VPUT ZKMD7 PROFILE
                        EXIT
                     &ZCMD = &ZKMD7
                     IF (&MODE EQ CMDRET)
                        .MSG = PSYS011V
                        EXIT
                  ELSE
                     IF (.CURSOR EQ ZKMD8)
                        IF (&MODE EQ CMDDEL)
                           &ZKMD8 = &Z
                           VPUT ZKMD8 PROFILE
                           EXIT
                        &ZCMD = &ZKMD8
                        IF (&MODE EQ CMDRET)
                           .MSG = PSYS011V
                           EXIT
                     ELSE
                        IF (.CURSOR EQ ZKMD9)
                           IF (&MODE EQ CMDDEL)
                              &ZKMD9 = &Z
                              VPUT ZKMD9 PROFILE
                              EXIT
                           &ZCMD = &ZKMD9
                           IF (&MODE EQ CMDRET)
                              .MSG = PSYS011V
                              EXIT
                        ELSE
                           IF (.CURSOR EQ ZKMD10)
                              IF (&MODE EQ CMDDEL)
                                 &ZKMD10 = &Z
                                 VPUT ZKMD10 PROFILE
                                 EXIT
                              &ZCMD = &ZKMD10
                              IF (&MODE EQ CMDRET)
                                 .MSG = PSYS011V
                                 EXIT
                           ELSE
                              IF (.CURSOR EQ ZKMD11)
                                 IF (&MODE EQ CMDDEL)
                                    &ZKMD11 = &Z
                                    VPUT ZKMD11 PROFILE
                                    EXIT
                                 &ZCMD = &ZKMD11
                                 IF (&MODE EQ CMDRET)
                                    .MSG = PSYS011V
                                    EXIT
                              ELSE
                                 IF (.CURSOR EQ ZKMD12)
                                    IF (&MODE EQ CMDDEL)
                                       &ZKMD12 = &Z
                                       VPUT ZKMD12 PROFILE
                                       EXIT
                                    &ZCMD = &ZKMD12
                                    IF (&MODE EQ CMDRET)
                                       .MSG = PSYS011V
                                       EXIT

IF (&LIST EQ ON AND &ZCMD NE &Z AND &ZKMD1 NE &ZCMD)
   IF (&ZKMD11 NE &Z) &ZKMD12 = &ZKMD11
   IF (&ZKMD10 NE &Z) &ZKMD11 = &ZKMD10
   IF (&ZKMD9  NE &Z) &ZKMD10 = &ZKMD9
   IF (&ZKMD8  NE &Z) &ZKMD9  = &ZKMD8
   IF (&ZKMD7  NE &Z) &ZKMD8  = &ZKMD7
   IF (&ZKMD6  NE &Z) &ZKMD7  = &ZKMD6
   IF (&ZKMD5  NE &Z) &ZKMD6  = &ZKMD5
   IF (&ZKMD4  NE &Z) &ZKMD5  = &ZKMD4
   IF (&ZKMD3  NE &Z) &ZKMD4  = &ZKMD3
   IF (&ZKMD2  NE &Z) &ZKMD3  = &ZKMD2
   IF (&ZKMD1  NE &Z) &ZKMD2  = &ZKMD1
   &ZKMD1 = &ZCMD

VPUT (ZKMD1,ZKMD2,ZKMD3,ZKMD4,ZKMD5,ZKMD6) PROFILE
VPUT (ZKMD7,ZKMD8,ZKMD9,ZKMD10,ZKMD11,ZKMD12) PROFILE

IF ( &ZCMD EQ &Z ) .CURSOR = ZCMD

)END
