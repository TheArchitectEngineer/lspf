)PANEL VERSION=1 FORMAT=1

)COMMENT
 A simple saved file list dialogue.  File/directory name expansion supported via program PFLST0A.
 NRETRIEV also supported.

 Retrieve list is cursor sensitive.
)ENDCOMMENT

)INCLUDE STD_PDC
)INCLUDE RFL_PDC
)INCLUDE HLP_PDC

)BODY

PanelTitle "Saved File List (&ZAPPLID)"

text      4   2   FP "Command ===> "
field     4  15  MAX NEF CAPS(ON),PAD(USER) ZCMD

text      6   2   FP "File name. . .:"
field     6  18   MAX  NEF PAD(USER) ZFILE

text      7   2   FP "Directory. . .:"
field     7  18   MAX  NEF PAD(USER) ZDIR

text      8   2   FP "Current. . . .:"
field     8  18   MAX  VOI NONE ZCURR

field    10   2  1   NEF CAPS(ON),PAD(USER),SKIP(OFF) SEL1
field    10   4  MAX NEF CAPS(OFF),PAD(USER) ZFILE1

field    11   2  1   NEF CAPS(ON),PAD(USER),SKIP(OFF) SEL2
field    11   4  MAX NEF CAPS(OFF),PAD(USER) ZFILE2

field     12  2  1   NEF CAPS(ON),PAD(USER),SKIP(OFF) SEL3
field     12  4  MAX NEF CAPS(OFF),PAD(USER) ZFILE3

field     13  2  1   NEF CAPS(ON),PAD(USER),SKIP(OFF) SEL4
field     13  4  MAX NEF CAPS(OFF),PAD(USER) ZFILE4

field     14  2  1   NEF CAPS(ON),PAD(USER),SKIP(OFF) SEL5
field     14  4  MAX NEF CAPS(OFF),PAD(USER) ZFILE5

field     15  2  1   NEF CAPS(ON),PAD(USER),SKIP(OFF) SEL6
field     15  4  MAX NEF CAPS(OFF),PAD(USER) ZFILE6

field     16  2  1   NEF CAPS(ON),PAD(USER),SKIP(OFF) SEL7
field     16  4  MAX NEF CAPS(OFF),PAD(USER) ZFILE7

field     17  2  1   NEF CAPS(ON),PAD(USER),SKIP(OFF) SEL8
field     17  4  MAX NEF CAPS(OFF),PAD(USER) ZFILE8


)INIT
&ZUS3 = 1
.NRET = ON
.NRET = ZFILE

&ZFILE = &Z
VGET (ZCURR) PROFILE
VGET (ZFILE1 ZFILE2 ZFILE3 ZFILE4 ZFILE5 ZFILE6 ZFILE7 ZFILE8) PROFILE
.HELP= HPSPF02
.CURSOR = ZFILE

)REINIT
.CURSOR = ZFILE
REFRESH(*)

)PROC
IF (&ZCMD NE &Z)
   .MSG    = PSYS011C
   .CURSOR = ZCMD
   EXIT

VER (&SEL1,LIST,S,B,C,E)
VER (&SEL2,LIST,S,B,C,E)
VER (&SEL3,LIST,S,B,C,E)
VER (&SEL4,LIST,S,B,C,E)
VER (&SEL5,LIST,S,B,C,E)
VER (&SEL6,LIST,S,B,C,E)
VER (&SEL7,LIST,S,B,C,E)
VER (&SEL8,LIST,S,B,C,E)

IF (&SEL1 EQ C)
    &SEL1   = &Z
    .CURSOR = ZFILE1
ELSE
   IF (&SEL2 EQ C)
      &SEL2   = &Z
      .CURSOR = ZFILE2
   ELSE
      IF (&SEL3 EQ C)
         &SEL3   = &Z
         .CURSOR = ZFILE3
      ELSE
         IF (&SEL4 EQ C)
            &SEL4   = &Z
            .CURSOR = ZFILE4
         ELSE
            IF (&SEL5 EQ C)
               &SEL5   = &Z
               .CURSOR = ZFILE5
            ELSE
               IF (&SEL6 EQ C)
                  &SEL6   = &Z
                  .CURSOR = ZFILE6
               ELSE
                  IF (&SEL7 EQ C)
                     &SEL7   = &Z
                     .CURSOR = ZFILE7
                  ELSE
                     IF (&SEL8 EQ C)
                        &SEL8   = &Z
                        .CURSOR = ZFILE8

IF (.CURSOR EQ ZFILE1)
   &ZCURR = &ZFILE1
   .MSG   = PSYS011V
ELSE
   IF (.CURSOR EQ ZFILE2)
      &ZCURR = &ZFILE2
      .MSG   = PSYS011V
   ELSE
      IF (.CURSOR EQ ZFILE3)
         &ZCURR = &ZFILE3
         .MSG   = PSYS011V
      ELSE
         IF (.CURSOR EQ ZFILE4)
            &ZCURR = &ZFILE4
            .MSG   = PSYS011V
         ELSE
            IF (.CURSOR EQ ZFILE5)
               &ZCURR = &ZFILE5
               .MSG   = PSYS011V
            ELSE
               IF (.CURSOR EQ ZFILE6)
                  &ZCURR = &ZFILE6
                  .MSG   = PSYS011V
               ELSE
                  IF (.CURSOR EQ ZFILE7)
                     &ZCURR = &ZFILE7
                     .MSG   = PSYS011V
                  ELSE
                     IF (.CURSOR EQ ZFILE8)
                        &ZCURR = &ZFILE8
                        .MSG   = PSYS011V


if (.MSG=PSYS011V)
   VPUT (ZCURR) PROFILE
   .CURSOR = ZFILE
   EXIT

VPUT (ZCURR) PROFILE
VPUT (ZFILE1 ZFILE2 ZFILE3 ZFILE4 ZFILE5 ZFILE6 ZFILE7 ZFILE8) PROFILE


)FIELD

 -- Expanding ZFILE requires directory fields ZDIR and ZCURR passing to the application.
 -- Note that these are the field values, not the dialogue variable values which
 -- are not updated as panel processing does not occur on field-level execution.
 -- PASS stores field values in ZFEDATA1, ZFEDATA2, ZFEDATA3, ..etc.. in the SHARED pool

 FIELD(ZFILE)  EXEC('SELECT PGM(PFLST0A) PARM(EXPAND FO2)') PASS(ZDIR ZCURR)
 FIELD(ZDIR)   EXEC('SELECT PGM(PFLST0A) PARM(EXPAND DO1)')
 FIELD(ZFILE1) EXEC('SELECT PGM(PFLST0A) PARM(EXPAND ALL)')
 FIELD(ZFILE2) EXEC('SELECT PGM(PFLST0A) PARM(EXPAND ALL)')
 FIELD(ZFILE3) EXEC('SELECT PGM(PFLST0A) PARM(EXPAND ALL)')
 FIELD(ZFILE4) EXEC('SELECT PGM(PFLST0A) PARM(EXPAND ALL)')
 FIELD(ZFILE5) EXEC('SELECT PGM(PFLST0A) PARM(EXPAND ALL)')
 FIELD(ZFILE6) EXEC('SELECT PGM(PFLST0A) PARM(EXPAND ALL)')
 FIELD(ZFILE7) EXEC('SELECT PGM(PFLST0A) PARM(EXPAND ALL)')
 FIELD(ZFILE8) EXEC('SELECT PGM(PFLST0A) PARM(EXPAND ALL)')


)END
