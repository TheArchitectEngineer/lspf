)PANEL VERSION=1 FORMAT=1

)COMMENT
Panel for editor PEDIT01
)ENDCOMMENT

)BODY HOME(ZCMD1) CMD(ZCMD1)

PanelTitle "Edit Entry Panel"

literal  4    2       FP     "Command ===> "
field 4  15   MAX     NEF     PAD('_') ZCMD1

literal  7    2       FP     "File Name. . .:"
field    7   18       MAX     NEF  NONE ZFILE

field    10   2   1   CEF     PAD('_') EEDIRLST
literal  10   4       SAC    "Show directory list if valid directory entered"

field    11   2   1   CEF     PAD('_') EENEWFLS
literal  11   4       SAC    "Allow edit of new files"

field    13   2   1   CEF     PAD('_') EEPRSPS
literal  13   4       SAC    "Preserve trailing spaces on file save"

field    14   2   1   CEF     PAD('_') EETABSS
literal  14   4       SAC    "Convert tabs to spaces on EDIT entry"
field    15   2   1   CEF     PAD('_') EETABCC
literal  15   4       SAC    "Convert spaces back to tabs on file save"


literal 18 2  CH "Instructions"
literal 19 2  NT "Enter file name and press"
literal 19 28 ET "ENTER"
literal 19 34 NT "to edit file"


)INCLUDE STD_PDC
)INCLUDE RFL_PDC
)INCLUDE HLP_PDC

)INIT

.NRET  = ON
.NRET  = ZFILE
&ZFILE = &Z
VGET (ZFILE,EETABCC,EETABSS,EEPRSPS,EEDIRLST,EENEWFLS) PROFILE

)PROC
if ( &ZCMD1 NE &Z)
  .MSG    = PSYS018
  .CURSOR = ZCMD1
  EXIT

VER (&ZFILE NB)
VER (&EETABSS  LIST /)
VER (&EETABCC  LIST /)
VER (&EEPRSPS  LIST /)
VER (&EEDIRLST LIST /)
VER (&EENEWFLS LIST /)

&SHOWDIR = NO

&ISFILE = FILE( ZFILE )
&ISDIR  = DIR( ZFILE )

IF ( &EEDIRLST NE '/' )
  IF ( &ISDIR EQ .TRUE )
     .CURSOR = ZFILE
     .MSG    = PEDT011T
     EXIT
  IF ( &ISFILE EQ .FALSE )
     IF ( &EENEWFLS NE '/' )
        .CURSOR = ZFILE
        .MSG    = PEDT011R
        EXIT
ELSE
  IF ( &ISFILE EQ .FALSE )
     IF ( &ISDIR NE .FALSE )
        &SHOWDIR = YES
     ELSE
        IF ( &EENEWFLS NE '/' )
           .CURSOR = ZFILE
           .MSG    = PEDT011S
           EXIT

VPUT (ZFILE,EETABCC,EETABSS,EEPRSPS,EEDIRLST,EENEWFLS) PROFILE

)FIELD
FIELD(ZFILE) EXEC('SELECT PGM(PFLST0A) PARM(EXPAND ALL)')

)END
