)PANEL VERSION=1 FORMAT=1

)COMMENT
Panel for editor PEDIT01
)ENDCOMMENT

)BODY HOME(ZCMD1) CMD(ZCMD1)

PanelTitle "Edit Entry Panel"

literal  3   2   FP  "EDIT"

literal  4   2      FP "COMMAND ===> "
field 4  15 MAX-17  NEF PAD('_') ZCMD1 

literal  6   2       FP  "File Name. . . :" 
field    6  19      MAX   NEF  NONE ZFILE

)INCLUDE STD_PDC
)INCLUDE HLP_PDC


)INIT
.NRET  = ON
&ZFILE = &Z
&ZRFFLDA = ZFILE
VPUT ZRFFLDA SHARED

)PROC
&A =  FILE( ZFILE )
IF ( &A EQ 0 )
   .CURSOR = ZFILE
   .MSG    = PEDT01R
   EXIT

)FIELD
FIELD(ZFILE) EXEC('SELECT PGM(PFLST0A) PARM(EXPAND ALL)')


)END
