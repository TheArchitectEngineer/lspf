)COMMENT
 RefList and RefMode pulldown choices
)ENDCOMMENT

)ABC DESC(RefList)
PDC  DESC("Open Referral Lists")
ACTION RUN(REFOPENF) UNAVAIL(ZRF0)
PDC  DESC("Open Active List")
ACTION RUN(REFACTF) UNAVAIL(ZRF1)
PDC  DESC("Open Reference List")
ACTION RUN(REFLISTF) UNAVAIL(ZRF2)
PDC  DESC("Personal Settings")
ACTION RUN(ISRROUTE) PARM("SELECT PGM(PLRFLST1) PARM(US1) NEWAPPL(ISP)") UNAVAIL(ZRF3)

)ABC DESC(RefMode)
PDC  DESC("List Execute")
ACTION RUN(ISRROUTE) PARM("SELECT PGM(PPSP01A) PARM(SETVAR ZRFMOD BEX)") UNAVAIL(ZRUN0)
PDC  DESC("List Retrieve")
ACTION RUN(ISRROUTE) PARM("SELECT PGM(PPSP01A) PARM(SETVAR ZRFMOD BRT)") UNAVAIL(ZRUN1)

)ABCINIT
IF (&ZRFMOD EQ BEX)
   &ZRUN0 = 1
   &ZRUN1 = 0
ELSE
   IF (&ZRFMOD EQ BRT)
      &ZRUN0 = 0
      &ZRUN1 = 1
