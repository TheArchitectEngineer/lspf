)PANEL VERSION=1 FORMAT=1
)COMMENT
 Show mount options
)ENDCOMMENT

)ATTR
D2 TYPE(FP)
11 TYPE(SAC)
13 TYPE(NEF) PADC(USER) JUST(LEFT)
CC TYPE(CEF) PADC(USER)

)BODY WINDOW(75,18) CMD()

PANELTITLE 'Mount a File System'

AREA 2 1 MAX MAX SAREA38

)AREA SAREA38
TEXT 1 2 ATTR(D2) 'Device name'
FIELD 2 5 MAX VOI NONE PART

TEXT 4 2 ATTR(D2) 'Mount point (blank for temporary mount point or to use fstab):'
FIELD 5 5 MAX ATTR(13) MPATH

TEXT 7  2 ATTR(D2) 'Mount options:'

TEXT 8  5 ATTR(11) 'Read-only file system'
FIELD 8  2 1 ATTR(CC) OPTRO

TEXT 8  35 ATTR(11) 'Ignore SETUID and SETGID'
FIELD 8  32 1 ATTR(CC) OPTIS

TEXT  9 5 ATTR(11) 'Use synchronous writes'
FIELD  9 2 1 ATTR(CC) OPTSW

TEXT 11 2 ATTR(D2) 'Mount parameters:'
FIELD 12 2 MAX ATTR(13) OPTOTHER

)INIT
.CURSOR = MPATH
.HIST   = 'MPATH OPTOTHER'

)PROC
&OPTRO = TRANS( &OPTRO &Z,&Z *,/ )
&OPTIS = TRANS( &OPTIS &Z,&Z *,/ )
&OPTSW = TRANS( &OPTSW &Z,&Z *,/ )

)FIELD
FIELD(PART)     LEN(4095)
FIELD(MPATH)    EXEC('SELECT PGM(PFLST0A) PARM(EXPAND ALL) NESTED')
FIELD(MPATH)    LEN(4095)
FIELD(OPTOTHER) LEN(1024)

)END
