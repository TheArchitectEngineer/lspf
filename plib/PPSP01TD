)PANEL VERSION=1 FORMAT=1
)COMMENT
 Panel to display simple TODO list
)ENDCOMMENT

)BODY WINDOW(82,15) CMD(ZCMD)

PanelTitle "TODO List"
literal   1  2   FP "Command ===> "
field     1 15  MAX  NEF CAPS(ON),PAD(USER) ZCMD
field     3  2  80      NEF NONE TODO1
field     4  2  80      NEF NONE TODO2
field     5  2  80      NEF NONE TODO3
field     6  2  80      NEF NONE TODO4
field     7  2  80      NEF NONE TODO5
field     8  2  80      NEF NONE TODO6
field     9  2  80      NEF NONE TODO7
field    10  2  80      NEF NONE TODO8
field    11  2  80      NEF NONE TODO9
field    12  2  80      NEF NONE TODO10
field    13  2  80      NEF NONE TODO11
field    14  2  80      NEF NONE TODO12
field    15  2  80      NEF NONE TODO13

)INIT
&ZCMD = &Z
&ZWINTTL = 'TO DO List (&ZAPPLID)'

)PROC

&ZCMD = TRANS (&ZCMD CAN,CANCEL CANCEL,CANCEL RES,RESET RESET,RESET &Z,&Z MSG = PSYS018 )

IF (&ZCMD = CANCEL )
    .RESP = END
ELSE
   IF (&ZCMD = RESET )
       vget ( TODO1 TODO2  TODO3  TODO4  TODO5 TODO6 TODO7 TODO8 ) PROFILE
       vget ( TODO9 TODO10 TODO11 TODO12 TODO13 ) PROFILE
       .RESP = ENTER
   ELSE
      IF (.MSG = &Z AND .RESP = END )
          vput ( TODO1 TODO2  TODO3  TODO4  TODO5 TODO6 TODO7 TODO8 ) PROFILE
          vput ( TODO9 TODO10 TODO11 TODO12 TODO13 ) PROFILE

)END
