)PANEL VERSION=1 FORMAT=1

)COMMENT

This is the selection panel for the SETTINGS MENU
Dialogue variables for selection panels reside in the shared/profile pools

)ENDCOMMENT

)INCLUDE STD_PDC
)INCLUDE HLP_PDC

)BODY

PanelTitle "Primary Settings and Information Panel"

text     4    2       FP  "Option ===>"
field    4   14   MAX  NEF     CAPS(ON),PAD(USER)  ZCMD

text     6   MAX-20        FP  "Date: "
field    6   MAX-14    8   VOI   NONE  ZDATE

text     7   MAX-20         FP  "Time: "
field    7   MAX-14    8    VOI   NONE  ZTIME

text     6   2    SAC  "0"
text     6   5    PS   "General"
text     6   17   NT   "Display and alter general lspf option settings"

text     7   2    SAC  "1"
text     7   5    PS   "PF Keys"
text     7   17   NT   "Display and alter function key settings"

text     8   2    SAC  "2"
text     8   5    PS   "CUA Colours"
text     8   17   NT   "Display and alter screen colours"

text     9   2    SAC  "3"
text     9   5    PS   "Colours"
text     9   17   NT   "Display and alter lspf global colours"

text     10  2    SAC  "4"
text     10  5    PS   "Commands"
text     10  17   NT   "Display command tables"

text     11  2    SAC  "5"
text     11  5    PS   "Paths"
text     11  17   NT   "Display search paths and LIBDEF status"

text     12  2    SAC  "6"
text     12  5    PS   "Variables"
text     12  17   NT   "Display and delete shared and profile pool variables"

text     13  2    SAC  "7"
text     13  5    PS   "Modules"
text     13  17   NT   "Display/Reload Application Modules"

text     14  2    SAC  "8"
text     14  5    PS   "Programs"
text     14  17   NT   "Display and alter utility programs"

text     15  2    SAC  "9"
text     15  5    PS   "Ctrl keys"
text     15  17   NT   "Display and alter keyboard control key functions"

text     17  2    SAC  "T"
text     17  5    PS   "Tutorial"
text     17  17   NT   "Start Tutorial"

text     18  2    SAC  "X"
text     18  5    PS   "Terminate"
text     18  17   NT   "Terminate Settings"

)INIT
.CURSOR = ZCMD
&ZPRIM  = YES

)PROC
IF ( TRUNC( &ZCMD, 1 ) EQ '.' )
   .MSG = PSYS016
   EXIT

&ZSEL = TRANS( TRUNC( &ZCMD,'.' ) ,
                     0,'PGM(PPSP01A) PARM(GOPTS)    NEWPOOL SCRNAME(SETTINGS)'
                     1,'PGM(PPSP01A) PARM(KEYS)     NEWPOOL SCRNAME(PFKEYS)'
                     2,'PGM(PPSP01A) PARM(COLOURS)  NEWPOOL SCRNAME(CUA)'
                     3,'PGM(PPSP01A) PARM(GCL)      NEWPOOL SCRNAME(CUA)'
                     4,'PGM(PPSP01A) PARM(CMDS)     NEWPOOL SCRNAME(COMMANDS)'
                     5,'PGM(PPSP01A) PARM(PATHS)    NEWPOOL SCRNAME(PATHS)'
                     6,'PGM(PPSP01A) PARM(VARS)     SCRNAME(VARS)'
                     7,'PGM(PPSP01A) PARM(MODS)     NEWPOOL SCRNAME(MODULES)'
                     8,'PGM(PPSP01A) PARM(UTPGMS)   NEWPOOL SCRNAME(UTILS)'
                     9,'PGM(PPSP01A) PARM(CTLKEYS)  NEWPOOL SCRNAME(CONTROL)'
                     T,'PGM(&ZHELPPGM) PARM(T)'
                     X,EXIT
                    &Z,&Z
                     *,'?'
             )

)PNTS
FIELD( ZPS01001 ) VAR(ZCMD)  VAL(0)
FIELD( ZPS01002 ) VAR(ZCMD)  VAL(1)
FIELD( ZPS01003 ) VAR(ZCMD)  VAL(2)
FIELD( ZPS01004 ) VAR(ZCMD)  VAL(3)
FIELD( ZPS01005 ) VAR(ZCMD)  VAL(4)
FIELD( ZPS01006 ) VAR(ZCMD)  VAL(5)
FIELD( ZPS01007 ) VAR(ZCMD)  VAL(6)
FIELD( ZPS01008 ) VAR(ZCMD)  VAL(7)
FIELD( ZPS01009 ) VAR(ZCMD)  VAL(8)
FIELD( ZPS01010 ) VAR(ZCMD)  VAL(9)
FIELD( ZPS01011 ) VAR(ZCMD)  VAL(T)
FIELD( ZPS01012 ) VAR(ZCMD)  VAL(X)

)END
